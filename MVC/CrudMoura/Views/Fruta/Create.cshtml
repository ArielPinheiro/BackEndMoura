@model CrudMoura.Models.Fruta
<h1> Cadastro De Frutas</h1>
<form asp-action="SalvarFruta"method="post">
<label asp-for="Nome"">Nome Da Fruta</label>
<input asp-for="Nome" class="form-control">

<label asp-for="Preco"">Preco Da Fruta</label>
<input asp-for="Preco" class="form-control">

<label asp-for="Quantidade"">Quantidade De Frutas</label>
<input asp-for="Quantidade" class="form-control">

<label asp-for="Categoria"">Categoria Da Fruta</label>
<input asp-for="Categoria" class="form-control">

<br><br>
<button class="btn btn-success">Cadastrar Fruta</button>
</form>